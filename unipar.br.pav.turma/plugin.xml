<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="unipar.br.pav.turma.aplicacao.internal.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="unipar.br.pav.turma.perspective.Perspective"
            id="unipar.br.pav.turma.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="unipar.br.pav.turma.arquivo"
               label="Arquivo">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  id="unipar.br.pav.turma.sair"
                  label="Sair">
            </command>
         </menu>
         <menu
               id="unipar.br.pav.turma.cadastro"
               label="Cadastro">
            <command
                  commandId="unipar.br.pav.turma.openExemploCommand"
                  icon="assets/funcoes/aboutFlag16.png"
                  id="unipar.br.pav.turma.cadastro.exemplo"
                  label="Exemplo"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="unipar.br.pav.turma.telas.editor.UsuarioEditor"
            id="unipar.br.pav.turma.telas.editor.UsuarioEditor"
            name="Usuário">
      </editor>
      <editor
            class="unipar.br.pav.turma.telas.editor.AlunoEditor"
            id="unipar.br.pav.turma.telas.editor.AlunoEditor"
            name="Aluno">
      </editor>
      <editor
            class="unipar.br.pav.turma.telas.editor.ExemploEditor"
            id="unipar.br.pav.turma.telas.editor.ExemploEditor"
            name="Exemplo">
      </editor>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="unipar.br.pav.turma.application"
            name="Aplicação exemplo">
         <property
               name="appName"
               value="Aplicação exemplo">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="unipar.br.pav.turma.aplicacao.command.OpenExemploCommand"
            id="unipar.br.pav.turma.openExemploCommand"
            name="Exemplos commnads">
      </command>
   </extension>

</plugin>
